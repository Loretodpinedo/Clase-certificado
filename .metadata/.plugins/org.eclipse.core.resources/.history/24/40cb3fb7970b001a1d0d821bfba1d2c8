package vista;

import java.util.Scanner;

import modelo.entidad.Libro;



public class LibreriaVista {
	
    static Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
			
		
		System.out.println("Selecciona la opcion del menu");
		System.out.println("1- Dar de alta un libro");
		System.out.println("2- Listar todos los libros");
		System.out.println("3- Buscar libro por ISBN");
		System.out.println("4- Buscar libro por editorial");
		
		String opcion = sc.nextLine();
		
		if (opcion.contentEquals("1")) {
			
			Libro libro = new Libro();
			
			System.out.println("ISBN");
			System.out.println("Titulo");
			System.out.println("Editorial");
			System.out.println("Año de publicacion");
			
			String isbn = sc.nextLine();
			String titulo = sc.nextLine();
			String editorial = sc.nextLine();
			String añoPublicacion = sc.nextLine();
			
			libro.setIsbn(isbn);
			libro.setTitulo(titulo);
			libro.setEditorial(editorial);
			libro.setAñoPublicacion(añoPublicacion);
			
			
			
			
			
			
			
		}
		
		
	
		
		
		
			
		
			
		
	
		
	

		

	
		
		
		
		
		
		
	}
}


